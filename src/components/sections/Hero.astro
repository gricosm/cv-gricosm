---
import { basics } from "@cv";
import Section from "@/components/Section.astro";
import Location from "@/assets/icons/Location.astro";
import Mail from "@/assets/icons/Mail.astro";
import Linkedin from "@/assets/icons/Linkedin.astro";
import Github from "@/assets/icons/Github.astro";
import Twitter from "@/assets/icons/Hashtag.astro";

const { name, label, email, image, profiles } = basics;
const { region, city } = basics.location;
const ICONS: Record<string, any> = {
  Linkedin,
  Github,
  Twitter,
};
---

<Section>
  <div class="hero">
    <div class="general-info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span class="info">
        <Location />
        {city}, {region}
      </span>
      <footer>
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Send mail to ${name}`}
              rel="noopener noreferrer"
              target="_blank"
            >
              <Mail />
            </a>
          )
        }
        {
          profiles.map(({ network, url }) => {
            const Icon = ICONS[network];

            return (
              <a
                href={url}
                title={`Visita mi perfil en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            );
          })
        }
      </footer>
    </div>
    <figure>
      <img
        src={image}
        alt="Profile picture showing Guillermo and Brownie; Guillermo is the one in the right"
      />
    </figure>
  </div>
</Section>

<style>
  h1 {
    font-size: 2.5rem;
  }
  h2 {
    color: #3b3b3c;
    font-size: 1.1rem;
    font-weight: 500;
    text-wrap: balance;
  }

  span {
    color: #3b3b3c;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.625rem;
    letter-spacing: -0.05rem;
  }

  img {
    aspect-ratio: 1 / 1;
    width: 8rem;
    object-fit: cover;
    border-radius: 1rem;
  }
  footer {
    font-size: 0.65rem;
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }
  footer > a {
    color: #3b3b3c;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    height: 24px;
    width: 24px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  footer > a:hover {
    background: #eee;
    border: 1px solid #ddd;
  }

  .hero {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .general-info {
    display: flex;
    flex-direction: column;
    padding-right: 2rem;
    gap: 0.5rem;
  }
</style>
